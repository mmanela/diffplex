<Window x:Class="DiffPlex.Wpf.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiffPlex.Wpf.Demo"
        xmlns:diffplex="clr-namespace:DiffPlex.Wpf.Controls;assembly=DiffPlex.Wpf"
        mc:Ignorable="d"
        Title="Demo - DiffPlex" Height="450" Width="800" Icon="Icon.png">
    <Grid>
        <diffplex:DiffViewer x:Name="DiffView" Margin="0,0,0,20" OldTextHeader="Old" NewTextHeader="New" HeaderForeground="#808080" />
        <Button VerticalAlignment="Bottom" Height="20" x:Name="DiffButton" Content="Switch Mode" Click="DiffButton_Click" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" />
    </Grid>
</Window>
