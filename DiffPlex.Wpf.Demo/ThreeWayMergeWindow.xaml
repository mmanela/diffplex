<Window x:Class="DiffPlex.Wpf.Demo.ThreeWayMergeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiffPlex.Wpf.Demo"
        xmlns:diffplex="clr-namespace:DiffPlex.Wpf.Controls;assembly=DiffPlex.Wpf"
        mc:Ignorable="d"
        Title="Three-Way Merge Demo - DiffPlex" Height="600" Width="1200" Icon="Icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <diffplex:ThreeWayMergeViewer x:Name="MergeViewer" Grid.Row="0"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#20808080" Height="30">
            <Button x:Name="LoadExample1Button" Content="Simple Conflict" Width="120" Height="25" 
                    Margin="10,2" Click="LoadExample1Button_Click"/>
            <Button x:Name="LoadExample2Button" Content="Multiple Conflicts" Width="120" Height="25" 
                    Margin="2" Click="LoadExample2Button_Click"/>
            <Button x:Name="LoadExample3Button" Content="Non-Conflicting" Width="120" Height="25" 
                    Margin="2" Click="LoadExample3Button_Click"/>
            <Button x:Name="ResetButton" Content="Reset" Width="80" Height="25" 
                    Margin="2" Click="ResetButton_Click"/>
            <Separator Margin="10,0"/>
            <CheckBox x:Name="IgnoreWhiteSpaceCheckBox" Content="Ignore WhiteSpace" 
                      IsChecked="{Binding IgnoreWhiteSpace, ElementName=MergeViewer}" 
                      VerticalAlignment="Center" Margin="10,0"/>
            <CheckBox x:Name="IgnoreCaseCheckBox" Content="Ignore Case" 
                      IsChecked="{Binding IgnoreCase, ElementName=MergeViewer}" 
                      VerticalAlignment="Center" Margin="10,0"/>
            <Separator Margin="10,0"/>
            <TextBlock Text="Conflicts:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBlock x:Name="ConflictStatusText" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
