<UserControl x:Class="DiffPlex.Wpf.Controls.SideBySideDiffControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiffPlex.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftColumn"/>
            <ColumnDefinition x:Name="RightColumn"/>
        </Grid.ColumnDefinitions>
        <local:InternalLinesControl x:Name="LeftContentPanel" ScrollChanged="LeftContentPanel_ScrollChanged" />
        <GridSplitter x:Name="Splitter" Width="5" />
        <local:InternalLinesControl x:Name="RightContentPanel" ScrollChanged="RightContentPanel_ScrollChanged" Grid.Column="1" />
    </Grid>
</UserControl>
