<UserControl x:Class="DiffPlex.Wpf.Controls.ThreeWayMergeViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiffPlex.Wpf.Controls"
             x:Name="SelfControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200">
    <UserControl.Resources>
        <Style x:Key="ConflictButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#4466CC66"/>
            <Setter Property="BorderBrush" Value="#8866CC66"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#6666CC66"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#AA66CC66"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#8866CC66"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#CC66CC66"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="HeaderRow" Height="30"/>
            <RowDefinition x:Name="ContentRow" Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with labels -->
        <Grid Grid.Row="0" Background="#20808080">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Base" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="{Binding Foreground, ElementName=SelfControl}" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="Yours" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="{Binding Foreground, ElementName=SelfControl}" FontWeight="Bold"/>
            <TextBlock Grid.Column="4" Text="Theirs" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="{Binding Foreground, ElementName=SelfControl}" FontWeight="Bold"/>
            <TextBlock Grid.Column="6" Text="Merged Result" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="{Binding Foreground, ElementName=SelfControl}" FontWeight="Bold"/>
        </Grid>

        <!-- Content panels -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="BaseColumn" Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition x:Name="YoursColumn" Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition x:Name="TheirsColumn" Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition x:Name="ResultColumn" Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Base panel -->
            <local:InternalLinesViewer x:Name="BaseContentPanel" Grid.Column="0" 
                                       ScrollChanged="ContentPanel_ScrollChanged"/>
            
            <!-- GridSplitter 1 -->
            <GridSplitter Grid.Column="1" Width="5" Background="#64808080"/>
            
            <!-- Yours panel -->
            <local:InternalLinesViewer x:Name="YoursContentPanel" Grid.Column="2" 
                                       ScrollChanged="ContentPanel_ScrollChanged"/>
            
            <!-- GridSplitter 2 -->
            <GridSplitter Grid.Column="3" Width="5" Background="#64808080"/>
            
            <!-- Theirs panel -->
            <local:InternalLinesViewer x:Name="TheirsContentPanel" Grid.Column="4" 
                                       ScrollChanged="ContentPanel_ScrollChanged"/>
            
            <!-- GridSplitter 3 -->
            <GridSplitter Grid.Column="5" Width="5" Background="#64808080"/>
            
            <!-- Merged result panel -->
            <Grid Grid.Column="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <local:InternalLinesViewer x:Name="ResultContentPanel" Grid.Row="0"
                                           ScrollChanged="ContentPanel_ScrollChanged"/>
                
                <!-- Conflict resolution panel -->
                <ScrollViewer x:Name="ConflictPanel" Grid.Row="1" MaxHeight="100" 
                              VerticalScrollBarVisibility="Auto" 
                              Background="#20FF8080"
                              Visibility="Collapsed">
                    <StackPanel x:Name="ConflictButtonsPanel" Orientation="Horizontal" Margin="5"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
